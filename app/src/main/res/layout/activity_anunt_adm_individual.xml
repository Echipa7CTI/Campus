<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnuntAdmIndividualActivity">

    <EditText
        android:id="@+id/titluAnunt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Adevarat"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/textAnunt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titluAnunt"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:text="testare"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/textAnunt"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <Button
            android:id="@+id/salveazaAnunt"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:text="Salveaza anuntul"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/stergeAnunt"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:text="Sterge anuntul"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBloodRed"/>

    </LinearLayout>

</RelativeLayout>