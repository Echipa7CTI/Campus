<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlangereAdminActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plangerea studentului"
        android:textSize="20sp"
        android:layout_below="@+id/titlu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/subiectPlangere"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:hint="Subiect"/>

    <TextView
        android:id="@+id/detalierePlangere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Detaliere"
        android:textSize="15sp"
        android:layout_below="@id/subiectPlangere"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detalierePlangere"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:text="Adauga un raspuns la plangere"/>

    <EditText
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:text=""/>

    <RadioGroup
        android:id="@+id/radioGrup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/text3"
        android:layout_marginTop="20dp">
        <RadioButton android:id="@+id/radio_rezolvat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rezolvat"/>
        <RadioButton android:id="@+id/radio_nerezolvat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nerezolvat" />
    </RadioGroup>

    <Button
        android:id="@+id/trimiteBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGrup"
        android:text="Trimite raspuns"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>


</RelativeLayout>