<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/cantinaTitlu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meniul zilei"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/dataTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data"
        android:layout_below="@id/cantinaTitlu"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"/>

    <LinearLayout
        android:id="@+id/linearSupa"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:layout_below="@+id/dataTv"
        android:layout_marginTop="40dp"
        android:weightSum="10"
        android:gravity="center">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Supa:"
            android:textSize="25sp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/supaMeniu"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>

        <TextView
            android:id="@+id/pretSupa"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearCiorba"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:layout_below="@+id/linearSupa"
        android:layout_marginTop="10dp"
        android:weightSum="10"
        android:gravity="center">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Ciorba:"
            android:textSize="25sp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/ciorbaMeniu"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>

        <TextView
            android:id="@+id/pretCiorba"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearFel2"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:layout_below="@+id/linearCiorba"
        android:layout_marginTop="10dp"
        android:weightSum="10"
        android:gravity="center">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Fel 2:"
            android:textSize="25sp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/fel2Meniu"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>

        <TextView
            android:id="@+id/pretFel2"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearCarne"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:layout_below="@+id/linearFel2"
        android:layout_marginTop="10dp"
        android:weightSum="10"
        android:gravity="center">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Carne:"
            android:textSize="25sp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/carneMeniu"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>

        <TextView
            android:id="@+id/pretCarne"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearDesert"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:layout_below="@+id/linearCarne"
        android:layout_marginTop="10dp"
        android:weightSum="10"
        android:gravity="center">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Desert:"
            android:textSize="25sp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/desertMeniu"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>

        <TextView
            android:id="@+id/pretDesert"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>
    </LinearLayout>

</RelativeLayout>