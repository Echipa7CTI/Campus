<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlangereStudentActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plangerea ta"
        android:textSize="20sp"
        android:layout_below="@+id/titlu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/subiectPlangere"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:hint="Subiect"/>

    <TextView
        android:id="@+id/detalierePlangere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Detaliere"
        android:textSize="15sp"
        android:layout_below="@id/subiectPlangere"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detalierePlangere"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:text="Raspunsul administratorului:"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:text=""/>


</RelativeLayout>